{{#each posts as |post| }}
<div class="row mb-4 post">
    <div class="">
        <h2>
            <a href="/post/{{post.id}}">{{post.title}}</a>
        </h2>
        <p>Created by {{post.user.name}} on {{format_date post.createdAt}}</p>
    </div>
    <div class="">
        <p>
            {{post.body}}
        </p>
    </div>
</div>
{{/each}}